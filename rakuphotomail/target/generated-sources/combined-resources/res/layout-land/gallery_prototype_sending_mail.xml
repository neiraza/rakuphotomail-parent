<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="3dp"
		android:orientation="vertical" android:weightSum="1">
		<LinearLayout android:layout_height="wrap_content"
			android:paddingLeft="3dp" android:orientation="horizontal"
			android:layout_weight="0.40" android:layout_width="match_parent">
			<TextView android:id="@+id/textView1" android:text="To:"
				android:textSize="20sp" android:layout_width="wrap_content"
				android:layout_height="44dp" />
			<EditText android:id="@+id/gallery_mail_to_address"
				android:typeface="sans" android:textSize="22sp" android:text="宮本さん"
				android:shadowColor="#ff6600" android:scrollHorizontally="true"
				android:ellipsize="end" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:paddingBottom="3dp" />
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:paddingLeft="3dp" android:orientation="horizontal"
			android:layout_weight="0.40" android:layout_width="match_parent">
			<TextView android:id="@+id/textView1" android:text="Cc:"
				android:textSize="20sp" android:layout_width="wrap_content"
				android:layout_height="44dp" />
			<EditText android:id="@+id/gallery_mail_cc_address"
				android:typeface="sans" android:textSize="22sp" android:text="浦川さん、楠さん..."
				android:shadowColor="#ff6600" android:scrollHorizontally="true"
				android:ellipsize="end" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:paddingBottom="3dp" />
		</LinearLayout>
		<TextView android:id="@+id/gallery_mail_detail_open"
			android:typeface="sans" android:textSize="15sp" android:shadowDx="3.0"
			android:shadowDy="5.0" android:shadowRadius="2.0"
			android:shadowColor="#ff6600" android:text="送信先の詳細表示"
			android:gravity="bottom" android:layout_width="fill_parent"
			android:layout_height="fill_parent" />
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:paddingLeft="3dp" android:layout_height="217dp"
		android:layout_weight="1.17">
		<ScrollView android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:scrollbarSize="15dp"
			android:fadeScrollbars="false" android:scrollbarThumbVertical="@drawable/scrollbar_thumb">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent">
				<EditText android:id="@+id/gallery_mail_content"
					android:typeface="sans" android:textStyle="bold" android:textSize="30sp"
					android:layout_width="fill_parent" android:layout_height="fill_parent"
					android:hint="ここにメールの本文を入力して貰います" />
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button android:textSize="30sp" android:layout_width="fill_parent"
			android:text="送信" android:layout_height="wrap_content"
			android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>