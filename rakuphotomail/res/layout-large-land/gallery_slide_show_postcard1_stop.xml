<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/frame2"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/frame"
            android:orientation="horizontal">
        <LinearLayout
                android:id="@+id/gallery_mail_info_layout"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:layout_margin="8dip"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/number_rect3"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/number_rect3"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/number_rect3"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/number_rect3"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/number_rect3"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/number_rect3"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/number_rect3"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dip"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/gallery_mail_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:typeface="sans"/>
                <TextView
                        android:id="@+id/gallery_mail_sender_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:typeface="sans"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:gravity="center"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/gallery_mail_sent_flag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="@string/gallery_sent_flg"
                            android:typeface="sans"/>
                    <ImageView
                            android:id="@+id/gallery_mail_sent_flag_mark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:src="@drawable/overlay_ok"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dip"
                    android:paddingBottom="10dip"
                    android:src="@drawable/separator"/>
            <LinearLayout
                    android:id="@+id/gallery_mail_subject_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="5dip"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/gallery_mail_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:scrollHorizontally="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@drawable/frame">
            <ImageView
                    android:id="@+id/gallery_mail_picture"
                    android:layout_width="360dip"
                    android:layout_height="270dip"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:padding="7dip"/>
            <LinearLayout
                    android:id="@+id/gallery_thumbnail_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center">
                <Gallery
                        android:id="@+id/gallery_thumbnail"
                        android:layout_width="fill_parent"
                        android:layout_height="80dip"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/gallery_mail_button_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="#ffffff"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
            <Button
                    android:id="@+id/gallery_mail_pre"
                    android:background="@drawable/gallery_stop_pre_button"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content" />
            <ImageView
                    android:src="@drawable/blank"
                    android:layout_width="75dip"
                    android:layout_height="wrap_content" />
            <Button
                    android:id="@+id/gallery_mail_slide"
                    android:background="@drawable/gallery_stop_slide_button"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:src="@drawable/blank"
                    android:layout_width="75dip"
                    android:layout_height="wrap_content" />
            <Button
                    android:id="@+id/gallery_mail_reply"
                    android:background="@drawable/gallery_stop_reply_button"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:src="@drawable/blank"
                    android:layout_width="75dip"
                    android:layout_height="wrap_content" />
            <Button
                    android:id="@+id/gallery_mail_next"
                    android:background="@drawable/gallery_stop_next_button"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>