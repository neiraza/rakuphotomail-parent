<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:orientation="vertical">
		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="3dp"
				android:orientation="vertical">
				<TextView
						android:id="@+id/gallery_mail_subject"
						android:typeface="sans"
						android:textStyle="bold"
						android:textSize="17sp"
						android:scrollHorizontally="true"
						android:ellipsize="end"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content" />
				<TextView
						android:id="@+id/gallery_mail_date"
						android:typeface="sans"
						android:textSize="13sp"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content" />
		</LinearLayout>
		<FrameLayout
				android:id="@+id/gallery_detail_container"
				android:gravity="center_horizontal"
				android:layout_width="fill_parent"
				android:layout_height="110dp"
				android:padding="3dp">
				<ImageView
						android:id="@+id/gallery_detail_attachment_picuture_even"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:src="@drawable/droid" />
		</FrameLayout>
		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView
						android:id="@+id/gallery_mail_from_name"
						android:typeface="sans"
						android:textStyle="bold"
						android:textSize="17sp"
						android:scrollHorizontally="true"
						android:ellipsize="end"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:paddingBottom="3dp" />
				<TextView
						android:id="@+id/gallery_mail_from_address"
						android:typeface="sans"
						android:textSize="14sp"
						android:shadowColor="#ff6600"
						android:scrollHorizontally="true"
						android:ellipsize="end"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:paddingBottom="3dp" />
				<TableLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:shrinkColumns="1"
						android:stretchColumns="1">
						<TableRow
								android:layout_weight="1">
								<TextView
										android:typeface="sans"
										android:textStyle="bold"
										android:textSize="12sp"
										android:layout_width="fill_parent"
										android:layout_height="wrap_content"
										android:text="@string/gallery_mail_detail_to" />
								<TextView
										android:id="@+id/gallery_mail_to"
										android:typeface="sans"
										android:textSize="13sp"
										android:scrollHorizontally="true"
										android:ellipsize="end"
										android:layout_width="fill_parent"
										android:layout_height="wrap_content" />
						</TableRow>
						<TableRow
								android:layout_weight="1">
								<TextView
										android:id="@+id/gallery_mail_cc_title"
										android:typeface="sans"
										android:textStyle="bold"
										android:textSize="12sp"
										android:layout_width="fill_parent"
										android:layout_height="wrap_content"
										android:text="@string/gallery_mail_detail_cc" />
								<TextView
										android:id="@+id/gallery_mail_cc"
										android:typeface="sans"
										android:textSize="13sp"
										android:scrollHorizontally="true"
										android:ellipsize="end"
										android:layout_width="fill_parent"
										android:layout_height="wrap_content" />
						</TableRow>
				</TableLayout>
				<TextView
						android:id="@+id/gallery_mail_detail_open"
						android:typeface="sans"
						android:textSize="15sp"
						android:shadowDx="3.0"
						android:shadowDy="5.0"
						android:shadowRadius="2.0"
						android:shadowColor="#ff6600"
						android:text="@string/gallery_mail_detail_open"
						android:layout_weight="2"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent" />
		</LinearLayout>
		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingTop="5dp"
				android:layout_weight="1">
				<ScrollView
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:scrollbarSize="15dp"
						android:fadeScrollbars="false"
						android:scrollbarThumbVertical="@drawable/scrollbar_thumb">
						<LinearLayout
								android:layout_width="fill_parent"
								android:layout_height="fill_parent">
								<TextView
										android:id="@+id/gallery_mail_content"
										android:typeface="sans"
										android:textStyle="bold"
										android:textSize="18sp"
										android:layout_width="fill_parent"
										android:layout_height="fill_parent" />
						</LinearLayout>
				</ScrollView>
		</LinearLayout>
		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingBottom="10dp"
				android:orientation="horizontal">
				<TextView
						android:id="@+id/gallery_mail_slide"
						android:typeface="sans"
						android:textStyle="normal"
						android:textSize="18sp"
						android:shadowDx="3.0"
						android:shadowDy="5.0"
						android:shadowRadius="2.0"
						android:shadowColor="#ff6600"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:layout_weight="1"
						android:text="@string/gallery_slide" />
				<TextView
						android:id="@+id/gallery_mail_separator"
						android:typeface="sans"
						android:textStyle="normal"
						android:textSize="18sp"
						android:shadowDx="3.0"
						android:shadowDy="5.0"
						android:shadowRadius="2.0"
						android:shadowColor="#ff6600"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:layout_weight="1" />
				<TextView
						android:id="@+id/gallery_mail_reply"
						android:typeface="sans"
						android:textStyle="normal"
						android:textSize="18sp"
						android:shadowDx="3.0"
						android:shadowDy="5.0"
						android:shadowRadius="2.0"
						android:shadowColor="#ff6600"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:layout_weight="1"
						android:text="@string/gallery_reply" />
		</LinearLayout>
</LinearLayout>