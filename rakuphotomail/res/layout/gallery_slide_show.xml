<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gallery_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:background="#000000">

    <ImageView
            android:id="@+id/gallery_attachment_picture_default"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ucom_logo"/>
    <ImageView
            android:id="@+id/gallery_attachment_picture_even"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    <ImageView
            android:id="@+id/gallery_attachment_picture_odd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="top|left">
        <TextView
                android:id="@+id/gallery_subject"
                android:typeface="sans"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/gallery_view_shadow"
                android:background="@color/gallery_view_shadow_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|left"/>
    </LinearLayout>
</FrameLayout>