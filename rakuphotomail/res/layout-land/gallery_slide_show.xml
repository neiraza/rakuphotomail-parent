<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:background="#000000">

    <ImageView
            android:id="@+id/gallery_attachment_picture_default"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ucom_logo"/>
    <ImageView
            android:id="@+id/gallery_attachment_picture_even"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    <ImageView
            android:id="@+id/gallery_attachment_picture_odd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

    <LinearLayout
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_margin="20dip"
            android:orientation="vertical">

        <TextView
                android:id="@+id/gallery_subject"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:background="@color/gallery_view_shadow_background"
                android:textColor="@color/gallery_view_shadow"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans"/>

        <TextView
                android:id="@+id/gallery_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/gallery_view_shadow_background"
                android:textColor="@color/gallery_view_shadow"
                android:textSize="20sp"
                android:typeface="sans"/>
        <TextView
                android:id="@+id/gallery_sent_flag"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/gallery_view_shadow_background"
                android:textColor="@color/gallery_view_shadow"
                android:text="@string/gallery_sent_flg"
                android:textSize="20sp"/>
    </LinearLayout>
</FrameLayout>