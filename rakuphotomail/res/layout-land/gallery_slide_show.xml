<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/gallery_container"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ImageView
                android:id="@+id/gallery_attachment_picuture_default"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/droid" />
		<ImageView
				android:id="@+id/gallery_attachment_picuture_even"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:src="@drawable/droid" />
		<ImageView
				android:id="@+id/gallery_attachment_picuture_odd"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:src="@drawable/droid" />
		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:gravity="top|left">
				<TextView
						android:id="@+id/gallery_subject"
						android:typeface="sans"
						android:textStyle="bold"
						android:textSize="20sp"
						android:shadowDx="3.0"
						android:shadowDy="5.0"
						android:shadowRadius="2.0"
						android:shadowColor="@color/gallery_view_shadow"
						android:background="@color/gallery_view_shadow_background"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="top|left" />
		</LinearLayout>
</FrameLayout>